---
import Hero from '../components/Hero.astro';
import ChorusIntro from '../components/ChorusIntro.astro';
import ChorusImage from '../components/ChorusImage.astro';
import TeamIntro from '../components/TeamIntro.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<Hero />
	<ChorusIntro />
	<ChorusImage />
	<section class="anniversary-highlight">
		<div class="anniversary-highlight__content">
			<h2>120 Jahre Liedertafel Mining</h2>
			<p>Die Jubil채umsfeier 2026 steht vor der T체r. Alle Infos, Einladungen und Anmeldungen findest du auf unserer eigenen Jubil채umsseite.</p>
		</div>
		<a class="anniversary-highlight__link" href="/120-jahre">Zur Jubil채umsseite</a>
	</section>
	<TeamIntro />
	<Contact />
	<Footer showHomeLink={false} />
</Layout>

<style>
	.anniversary-highlight {
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
		gap: 1.25rem;
		width: 100%;
		max-width: 800px;
		padding: 0 1.5rem;
	}

	.anniversary-highlight__content {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}



	.anniversary-highlight p {
		margin: 0;
		line-height: 1.6;
		opacity: 0.9;
	}

	.anniversary-highlight__link {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		padding: 0.85rem 2.5rem;
		border: 1px solid rgba(255, 255, 255, 0.4);
		background: rgba(255, 255, 255, 0.12);
		color: #ffffff;
		text-decoration: none;
		font-weight: 600;
		letter-spacing: 0.04em;
		text-transform: uppercase;
		transition: all 0.25s ease;
	}

	.anniversary-highlight__link:hover {
		background: rgba(255, 255, 255, 0.2);
		border-color: rgba(255, 255, 255, 0.7);
		transform: translateY(-2px);
	}

	@media (max-width: 600px) {

		.anniversary-highlight__link {
			width: 100%;
			padding: 0.85rem 1.5rem;
		}
	}
</style>
