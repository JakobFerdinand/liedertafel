---
import { getCollection, render } from "astro:content";
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";

interface TimelineEntry {
	id: string;
	date: string;
	title: string;
	subtitle?: string;
	image?: string;
	hasContent: boolean;
	Content: Awaited<ReturnType<typeof render>>["Content"];
}

const historyEntries = await getCollection("history");

const timelineEntries = await Promise.all(
	historyEntries
		.sort((first, second) => second.data.date.localeCompare(first.data.date))
		.map(async (entry) => {
			const { Content } = await render(entry);

			return {
				id: entry.id,
				date: entry.data.date,
				title: entry.data.title,
				subtitle: entry.data.subtitle,
				image: entry.data.image,
				hasContent: (entry.body?.trim().length ?? 0) > 0,
				Content,
			} satisfies TimelineEntry;
		}),
);
---

<Layout>
	<section class="history-hero">
		<p class="history-hero__eyebrow">Vereinschronik</p>
		<h1>Geschichte der Liedertafel Mining</h1>
		<p>Wichtige Stationen unseres Chors - von der Gr√ºndung bis heute.</p>
	</section>

	<section class="timeline" aria-labelledby="timeline-heading">
		<h2 id="timeline-heading">Zeitstrahl</h2>
		<ul class="timeline-list">
			{
				timelineEntries.map((entry) => (
					<li class="timeline-item">
						<details class="timeline-details" open={false}>
							<summary>
								<span class="timeline-date">{entry.date}</span>
								<div class="timeline-header">
									<h3>{entry.title}</h3>
									{entry.subtitle && <p>{entry.subtitle}</p>}
								</div>
							</summary>
							{(entry.image || entry.hasContent) && (
								<div class="timeline-content" id={entry.id}>
									{entry.image && <img src={entry.image} alt={`Bild zu ${entry.title}`} loading="lazy" />}
									{entry.hasContent && <entry.Content />}
								</div>
							)}
						</details>
					</li>
				))
			}
		</ul>
	</section>

	<Footer />
</Layout>

<style>
	.history-hero {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
		text-align: center;
		padding: 0 1.5rem;
	}

	.history-hero__eyebrow {
		text-transform: uppercase;
		letter-spacing: 0.2em;
		font-size: 0.85rem;
		font-weight: 600;
		margin: 0;
		opacity: 0.8;
	}

	.history-hero p {
		margin: 0;
		line-height: 1.6;
		opacity: 0.9;
	}

	.timeline {
		width: 100%;
		max-width: var(--content-max-width);
		padding: 0 1.5rem;
	}

	.timeline-list {
		list-style: none;
		margin: 0;
		padding: 0;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.timeline-item {
		position: relative;
		--timeline-item-padding-left: 2rem;
		--timeline-marker-x: 0.5rem;
		padding-left: var(--timeline-item-padding-left);
	}

	.timeline-item::before {
		content: "";
		position: absolute;
		left: var(--timeline-marker-x);
		top: 0;
		bottom: -1.2rem;
		width: 2px;
		background: rgba(255, 255, 255, 0.3);
		transform: translateX(-50%);
	}

	.timeline-item:last-child::before {
		bottom: 0.75rem;
	}

	.timeline-details {
		background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.04) 100%);
		border: 1px solid rgba(255, 255, 255, 0.2);
		box-shadow: 0 8px 24px rgba(0, 0, 0, 0.16);
	}

	.timeline-details summary {
		list-style: none;
		cursor: pointer;
		padding: 1.2rem 1.2rem 1.2rem 1.35rem;
		display: grid;
		grid-template-columns: minmax(78px, auto) minmax(0, 1fr);
		gap: 0.9rem;
		align-items: start;
		position: relative;
	}

	.timeline-details summary::-webkit-details-marker {
		display: none;
	}

	.timeline-details summary::before {
		content: "";
		position: absolute;
		left: calc(var(--timeline-marker-x) - var(--timeline-item-padding-left));
		top: 50%;
		width: 0.75rem;
		height: 0.75rem;
		border-radius: 999px;
		border: 2px solid rgba(255, 255, 255, 0.78);
		background: rgb(130, 60, 65);
		transform: translate(-50%, -50%);
	}

	.timeline-date {
		font-size: 0.85rem;
		font-weight: 600;
		letter-spacing: 0.08em;
		text-transform: uppercase;
		opacity: 0.85;
		padding-top: 0.35rem;
	}

	.timeline-header h3 {
		font-size: 1.3rem;
	}

	.timeline-header p {
		margin: 0.45rem 0 0;
		opacity: 0.9;
		line-height: 1.5;
	}

	.timeline-content {
		padding: 0 1.2rem 1.2rem 1.35rem;
		border-top: 1px solid rgba(255, 255, 255, 0.12);
	}

	.timeline-content :global(p) {
		margin: 1rem 0 0;
		line-height: 1.65;
		opacity: 0.95;
	}

	.timeline-content img {
		display: block;
		width: 100%;
		max-height: 280px;
		object-fit: cover;
		margin-top: 1rem;
		border: 1px solid rgba(255, 255, 255, 0.2);
	}

	@media (max-width: 700px) {
		.timeline {
			padding: 0 1rem;
		}

		.timeline-item {
			--timeline-item-padding-left: 1.5rem;
			--timeline-marker-x: 0.35rem;
		}

		.timeline-details summary {
			grid-template-columns: 1fr;
			padding: 1rem;
			gap: 0.45rem;
		}

		.timeline-date {
			padding-top: 0;
		}

		.timeline-content {
			padding: 0 1rem 1rem;
		}
	}
</style>
