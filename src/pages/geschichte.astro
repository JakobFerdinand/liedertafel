---
import type { ImageMetadata } from "astro";
import { getCollection, render } from "astro:content";
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";

interface TimelineEntry {
	id: string;
	date: string;
	formattedDate: string;
	title: string;
	subtitle?: string;
	image?: ImageMetadata;
	hasContent: boolean;
	Content: Awaited<ReturnType<typeof render>>["Content"];
}

const formatHistoryDate = (rawDate: string) => {
	if (/^\d{4}$/.test(rawDate)) {
		return rawDate;
	}

	if (/^\d{4}-\d{2}$/.test(rawDate)) {
		const [year, month] = rawDate.split("-").map(Number);
		const parsedDate = new Date(Date.UTC(year, month - 1, 1));

		return new Intl.DateTimeFormat("de-AT", {
			month: "long",
			year: "numeric",
			timeZone: "UTC",
		}).format(parsedDate);
	}

	if (/^\d{4}-\d{2}-\d{2}$/.test(rawDate)) {
		const [year, month, day] = rawDate.split("-").map(Number);
		const parsedDate = new Date(Date.UTC(year, month - 1, day));

		return new Intl.DateTimeFormat("de-AT", {
			day: "2-digit",
			month: "long",
			year: "numeric",
			timeZone: "UTC",
		}).format(parsedDate);
	}

	return rawDate;
};

const historyEntries = await getCollection("history");

const timelineEntries = await Promise.all(
	historyEntries
		.sort((first, second) => second.data.date.localeCompare(first.data.date))
		.map(async (entry) => {
			const { Content } = await render(entry);

			return {
				id: entry.id,
				date: entry.data.date,
				formattedDate: formatHistoryDate(entry.data.date),
				title: entry.data.title,
				subtitle: entry.data.subtitle,
				image: entry.data.image,
				hasContent: (entry.body?.trim().length ?? 0) > 0,
				Content,
			} satisfies TimelineEntry;
		}),
);
---

<Layout>
	<section class="history-hero">
		<p class="history-hero__eyebrow">Vereinschronik</p>
		<h1>Geschichte der Liedertafel Mining</h1>
		<p>Wichtige Stationen unseres Chors - von der Gr√ºndung bis heute.</p>
	</section>

	<section class="timeline" aria-labelledby="timeline-heading">
		<h2 id="timeline-heading">Zeitstrahl</h2>
		<ul class="timeline-list">
			{
				timelineEntries.map((entry) => (
					<li class="timeline-item">
						<details class="timeline-details" open={false}>
							<summary>
								<span class="timeline-date">{entry.formattedDate}</span>
								<div class="timeline-header">
									<h3>{entry.title}</h3>
									{entry.subtitle && <p>{entry.subtitle}</p>}
								</div>
							</summary>
							{(entry.image || entry.hasContent) && (
								<div class="timeline-content" id={entry.id}>
									{entry.image && (
										<button
											type="button"
											class="timeline-image-trigger"
											data-image-src={entry.image.src}
											data-image-alt={`Bild zu ${entry.title}`}
											aria-label={`Bild zu ${entry.title} vergroessern`}
										>
											<img src={entry.image.src} alt={`Bild zu ${entry.title}`} loading="lazy" />
										</button>
									)}
									{entry.hasContent && <entry.Content />}
								</div>
							)}
						</details>
					</li>
				))
			}
		</ul>
	</section>

	<dialog class="image-lightbox" aria-label="Bild vergroessert anzeigen">
		<button type="button" class="lightbox-close" aria-label="Vollbildansicht schliessen">x</button>
		<img class="lightbox-image" src="" alt="" />
	</dialog>

	<Footer />
</Layout>

<script>
	const lightbox = document.querySelector<HTMLDialogElement>(".image-lightbox");
	const lightboxImage = lightbox?.querySelector<HTMLImageElement>(".lightbox-image");
	const closeButton = lightbox?.querySelector<HTMLButtonElement>(".lightbox-close");
	const triggers = document.querySelectorAll<HTMLButtonElement>(".timeline-image-trigger");

	const closeLightbox = () => {
		if (lightbox?.open) {
			lightbox.close();
		}
	};

	triggers.forEach((trigger) => {
		trigger.addEventListener("click", () => {
			if (!lightbox || !lightboxImage) {
				return;
			}

			lightboxImage.src = trigger.dataset.imageSrc ?? "";
			lightboxImage.alt = trigger.dataset.imageAlt ?? "";
			lightbox.showModal();
		});
	});

	closeButton?.addEventListener("click", closeLightbox);

	lightbox?.addEventListener("click", (event) => {
		const target = event.target;
		if (target instanceof HTMLDialogElement) {
			closeLightbox();
		}
	});
</script>

<style>
	.history-hero {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
		text-align: center;
		padding: 0 1.5rem;
	}

	.history-hero__eyebrow {
		text-transform: uppercase;
		letter-spacing: 0.2em;
		font-size: 0.85rem;
		font-weight: 600;
		margin: 0;
		opacity: 0.8;
	}

	.history-hero p {
		margin: 0;
		line-height: 1.6;
		opacity: 0.9;
	}

	.timeline {
		width: 100%;
		max-width: var(--content-max-width);
		padding: 0 1.5rem;
	}

	.timeline-list {
		list-style: none;
		margin: 0;
		padding: 0;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.timeline-item {
		position: relative;
		--timeline-item-padding-left: 2rem;
		--timeline-marker-x: 0.5rem;
		padding-left: var(--timeline-item-padding-left);
	}

	.timeline-item::before {
		content: "";
		position: absolute;
		left: var(--timeline-marker-x);
		top: 0;
		bottom: -1.2rem;
		width: 2px;
		background: rgba(255, 255, 255, 0.3);
		transform: translateX(-50%);
	}

	.timeline-item:last-child::before {
		bottom: 0.75rem;
	}

	.timeline-details {
		background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.04) 100%);
		border: 1px solid rgba(255, 255, 255, 0.2);
		box-shadow: 0 8px 24px rgba(0, 0, 0, 0.16);
	}

	.timeline-details summary {
		list-style: none;
		cursor: pointer;
		padding: 1.2rem 1.2rem 1.2rem 1.35rem;
		display: grid;
		grid-template-columns: minmax(78px, auto) minmax(0, 1fr);
		gap: 0.9rem;
		align-items: start;
		position: relative;
	}

	.timeline-details summary::-webkit-details-marker {
		display: none;
	}

	.timeline-details summary::before {
		content: "";
		position: absolute;
		left: calc(var(--timeline-marker-x) - var(--timeline-item-padding-left));
		top: 50%;
		width: 0.75rem;
		height: 0.75rem;
		border-radius: 999px;
		border: 2px solid rgba(255, 255, 255, 0.78);
		background: rgb(130, 60, 65);
		transform: translate(-50%, -50%);
	}

	.timeline-date {
		font-size: 0.85rem;
		font-weight: 600;
		letter-spacing: 0.08em;
		text-transform: uppercase;
		opacity: 0.85;
		padding-top: 0.35rem;
	}

	.timeline-header h3 {
		font-size: 1.3rem;
	}

	.timeline-header p {
		margin: 0.45rem 0 0;
		opacity: 0.9;
		line-height: 1.5;
	}

	.timeline-content {
		padding: 0 1.2rem 1.2rem 1.35rem;
		border-top: 1px solid rgba(255, 255, 255, 0.12);
	}

	.timeline-content :global(p) {
		margin: 1rem 0 0;
		line-height: 1.65;
		opacity: 0.95;
	}

	.timeline-content img {
		display: block;
		width: 100%;
		max-height: 280px;
		object-fit: contain;
		margin-top: 0;
		border: 1px solid rgba(255, 255, 255, 0.2);
	}

	.timeline-image-trigger {
		display: block;
		width: 100%;
		margin: 1rem 0 0;
		padding: 0;
		border: 0;
		background: transparent;
		cursor: zoom-in;
	}

	.image-lightbox {
		padding: 0;
		border: 0;
		background: transparent;
		max-width: min(94vw, 1200px);
		max-height: 94vh;
	}

	.image-lightbox::backdrop {
		background: rgba(0, 0, 0, 0.68);
	}

	.lightbox-image {
		display: block;
		max-width: 100%;
		max-height: 92vh;
		width: auto;
		height: auto;
		object-fit: contain;
		border: 1px solid rgba(255, 255, 255, 0.35);
		box-shadow: 0 16px 36px rgba(0, 0, 0, 0.5);
	}

	.lightbox-close {
		position: fixed;
		top: 1rem;
		right: 1rem;
		width: 2.25rem;
		height: 2.25rem;
		border-radius: 999px;
		border: 1px solid rgba(255, 255, 255, 0.45);
		background: rgba(0, 0, 0, 0.5);
		color: #fff;
		font-size: 1.25rem;
		font-weight: 700;
		line-height: 1;
		cursor: pointer;
	}

	.lightbox-close:hover {
		background: rgba(0, 0, 0, 0.7);
	}

	@media (max-width: 700px) {
		.timeline {
			padding: 0 1rem;
		}

		.timeline-item {
			--timeline-item-padding-left: 1.5rem;
			--timeline-marker-x: 0.35rem;
		}

		.timeline-details summary {
			grid-template-columns: 1fr;
			padding: 1rem;
			gap: 0.45rem;
		}

		.timeline-date {
			padding-top: 0;
		}

		.timeline-content {
			padding: 0 1rem 1rem;
		}
	}
</style>
