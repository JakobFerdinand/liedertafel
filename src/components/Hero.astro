---
import Logo from '../assets/logo.svg';
---

<section class="hero">
	<div class="logo-container">
		<Logo class="logo" aria-label="Liedertafel Mining 1906 Logo" />
	</div>
	<h1>Liedertafel Mining 1906</h1>
</section>

<style>
	.hero {
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
		padding-top: 1.5rem;
		gap: 1.5rem;
	}

	.logo-container {
		width: 280px;
		height: 280px;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.logo {
		width: 100%;
		height: 100%;
		color: #ffffff;
	}



	@media (max-width: 600px) {
		.logo-container {
			width: 200px;
			height: 200px;
		}
	}
</style>
