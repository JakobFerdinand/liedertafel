---
interface Person {
	name: string;
	role: string;
	description: string;
	image: string;
}

const team: Person[] = [
	{
		name: "Alexander Huber",
		role: "Chorleiter",
		description: "Geduldig, ambitioniert, unerschrocken, unfassbar kreativ und wenn nötig auch ein wenig leidensfähig. Mit diesen Eigenschaften ist unser Chorleiter wie geschaffen für diese Funktion, die er seit 2015 mit bewundernswertem Engagement ausübt!",
		image: "https://placehold.co/400x300/dbe9f4/1b2a41?text=Chorleiter"
	},
	{
		name: "Christian Schwandtner",
		role: "Vereinsobmann",
		description: "Der Tag hat 24 Stunden und wenn nötig steht er darüber hinaus auch nachts zur Verfügung. Seit 2024 im Amt. Voller Energie und ein Profi im Managen und Organisieren unseres Vereinslebens.",
		image: "https://placehold.co/400x300/dbe9f4/1b2a41?text=Obmann"
	}
];
---

<section class="team-intro">
	<h2>Unsere Leitung</h2>
	<div class="team-list">
		{team.map((person, index) => (
			<article class={`person-card ${index % 2 === 1 ? 'reversed' : ''}`}>
				<img src={person.image} alt={`Portrait von ${person.name}`} class="person-image" />
				<div class="person-info">
					<h3>{person.name}</h3>
					<span class="role">{person.role}</span>
					<p>{person.description}</p>
				</div>
			</article>
		))}
	</div>
</section>

<style>
	.team-intro {
		width: 100%;
		padding: 0 1.5rem;
	}



	.team-list {
		display: flex;
		flex-direction: column;
		gap: 3rem;
		max-width: 680px;
		margin: 0 auto;
	}

	.person-card {
		display: grid;
		grid-template-columns: minmax(200px, 320px) minmax(0, 1fr);
		gap: 2rem;
		align-items: center;
	}

	.person-card.reversed {
		direction: rtl;
	}

	.person-card.reversed > * {
		direction: ltr;
	}

	.person-image {
		width: 100%;
		height: auto;
		aspect-ratio: 4 / 3;
		object-fit: cover;
	}

	.person-info {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
		max-width: 42ch;
	}



	.role {
		font-size: 0.875rem;
		opacity: 0.7;
		font-style: italic;
	}

	p {
		margin: 0.5rem 0 0 0;
		font-size: 1rem;
		line-height: 1.6;
		opacity: 0.85;
	}

	@media (max-width: 600px) {

		.person-card {
			grid-template-columns: 1fr;
			text-align: center;
		}

		.person-card.reversed {
			direction: ltr;
		}

		.person-info {
			align-items: center;
		}

		
	}
</style>
