---
interface Person {
	name: string;
	role: string;
	description: string;
	image: string;
}

const team: Person[] = [
	{
		name: "Alexander Huber",
		role: "Chorleiter",
		description: "Seit über 15 Jahren führt er unseren Chor mit Leidenschaft und musikalischem Feingefühl zu neuen Höhen.",
		image: "https://placehold.co/400x300/dbe9f4/1b2a41?text=Chorleiter"
	},
	{
		name: "Christian Schwandtner",
		role: "Vereinsobmann",
		description: "Mit großem Engagement kümmert er sich um die Organisation und den Zusammenhalt unseres Vereins.",
		image: "https://placehold.co/400x300/dbe9f4/1b2a41?text=Obmann"
	}
];
---

<section class="team-intro">
	<h2>Unsere Leitung</h2>
	<div class="team-list">
		{team.map((person, index) => (
			<article class={`person-card ${index % 2 === 1 ? 'reversed' : ''}`}>
				<img src={person.image} alt={`Portrait von ${person.name}`} class="person-image" />
				<div class="person-info">
					<h3>{person.name}</h3>
					<span class="role">{person.role}</span>
					<p>{person.description}</p>
				</div>
			</article>
		))}
	</div>
</section>

<style>
	.team-intro {
		width: 100%;
		padding: 0 1.5rem;
	}

	h2 {
		font-family: 'Playfair Display', Georgia, serif;
		font-size: 1.75rem;
		font-weight: 500;
		margin: 0 0 2rem 0;
		letter-spacing: 0.02em;
		text-align: center;
	}

	.team-list {
		display: flex;
		flex-direction: column;
		gap: 3rem;
	}

	.person-card {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 2rem;
		align-items: center;
	}

	.person-card.reversed {
		direction: rtl;
	}

	.person-card.reversed > * {
		direction: ltr;
	}

	.person-image {
		width: 100%;
		height: auto;
		aspect-ratio: 4 / 3;
		object-fit: cover;
	}

	.person-info {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	h3 {
		font-family: 'Playfair Display', Georgia, serif;
		font-size: 1.5rem;
		font-weight: 500;
		margin: 0;
	}

	.role {
		font-size: 0.875rem;
		opacity: 0.7;
		font-style: italic;
	}

	p {
		margin: 0.5rem 0 0 0;
		font-size: 1rem;
		line-height: 1.6;
		opacity: 0.85;
	}

	@media (max-width: 600px) {
		h2 {
			font-size: 1.5rem;
		}

		.person-card {
			grid-template-columns: 1fr;
			text-align: center;
		}

		.person-card.reversed {
			direction: ltr;
		}

		.person-info {
			align-items: center;
		}

		h3 {
			font-size: 1.25rem;
		}
	}
</style>
