---
const { showHomeLink = true, showPrivacyLink = true } = Astro.props;
---

<footer class="footer">
	<nav class="footer-nav">
		{showHomeLink && <a href="/">&larr; Zurück zur Startseite</a>}
		{showPrivacyLink && <a href="/datenschutz">Datenschutzerklärung</a>}
	</nav>
	<p class="copyright">&copy; {new Date().getFullYear()} Liedertafel Mining 1906</p>
</footer>

<style>
	.footer {
		width: 100%;
		padding: 2rem 1.5rem;
		margin-top: 3rem;
		opacity: 0.7;
		text-align: center;
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}

	.footer-nav a {
		color: inherit;
		text-decoration: none;
		font-size: 0.875rem;
	}

	.footer-nav {
		display: flex;
		gap: 0;
		justify-content: center;
		flex-wrap: wrap;
	}

	.footer-nav a {
		padding: 0 0.9rem;
	}

	.footer-nav a:first-child {
		padding-left: 0;
	}

	.footer-nav a:last-child {
		padding-right: 0;
	}

	.footer-nav a + a {
		position: relative;
	}

	.footer-nav a + a::before {
		content: "";
		position: absolute;
		left: 0;
		top: 50%;
		transform: translateY(-50%);
		width: 1px;
		height: 0.9em;
		background: rgba(255, 255, 255, 0.45);
	}

	.footer-nav a:hover {
		text-decoration: underline;
	}

	.copyright {
		margin: 0;
		font-size: 0.75rem;
	}
</style>
